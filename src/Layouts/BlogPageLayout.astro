---
const { frontmatter } = Astro.props;
import '../styles/global.css';

const pathname = new URL(Astro.request.url).pathname;

const API_PAGES = [
  {
    label: 'TNG(..)',
    link: '/api/tng',
    isActive: function () {
      return this.link === pathname ? 'active' : '';
    },
  },
  {
    label: 'useState(..)',
    link: '/api/usestate',
    isActive: function () {
      return this.link === pathname ? 'active' : '';
    },
  },
  {
    label: 'useReducer(..)',
    link: '/api/usereducer',
    isActive: function () {
      return this.link === pathname ? 'active' : '';
    },
  },
  {
    label: 'useEffect(..)',
    link: '/api/useeffect',
    isActive: function () {
      return this.link === pathname ? 'active' : '';
    },
  },
  {
    label: 'useMemo(..)',
    link: '/api/usememo',
    isActive: function () {
      return this.link === pathname ? 'active' : '';
    },
  },
  {
    label: 'useCallback(..)',
    link: '/api/usecallback',
    isActive: function () {
      return this.link === pathname ? 'active' : '';
    },
  },
  {
    label: 'useRef(..)',
    link: '/api/useref',
    isActive: function () {
      return this.link === pathname ? 'active' : '';
    },
  },
  {
    label: 'useCustomHooks',
    link: '/api/customhook',
    isActive: function () {
      return this.link === pathname ? 'active' : '';
    },
  },
];
---

<html>
  <head>
    <!-- Add other Head elements here, like styles and meta tags. -->
    <title>{frontmatter.title} | TNG-hooks docs</title>
    <meta name="description" content={frontmatter.description} />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ“–</text></svg>"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main class="main-container">
      <aside class="sidebar-container">
        <div class="sidebar-items-wrapper">
          <a href="/" class={`sidebar-link ${pathname === '/' ? 'active' : ''}`}
            >Introduction</a
          >
          <p class="sidebar-section-heading">API</p>
          {
            API_PAGES.map((data) => (
              <a href={data.link} class={`sidebar-link ${data.isActive()}`}>
                <code> {data.label}</code>
              </a>
            ))
          }
        </div>
      </aside>
      <div class="main-content-container"><slot /></div>
    </main>
    <footer class="main-container">
      <div></div>
      <div class="footer-row">
        <div>
          Content and Library's credit goes to <a
            class="footer-link"
            href="https://github.com/getify">Kyle Simpsons (@getify)</a
          >
        </div>
        <div>
          Docs built with {'<3'} and a <b>lot</b> of experiments by <a
            class="footer-link"
            href="https://github.com/getify">Tanvesh Sarve (@tanvesh01)</a
          >
        </div>
        <div>
          Source: <a
            class="footer-link"
            href="https://github.com/tanvesh01/TNG-hooks-docs"
            >TNG-hooks-docs
          </a>(powered by <a class="footer-link" href="https://astro.build/"
            >astro</a
          >, <a class="footer-link" href="https://babeljs.io/"> babel</a>, and <a
            class="footer-link"
            href="https://codemirror.net/"
          >
            codemirror</a
          >)
        </div>
      </div>
    </footer>
  </body>
</html>
